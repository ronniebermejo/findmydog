div ng-controller="indexController"

  / Views
  =load_ng_template('/app/angular/lost_pet_dialog')

  div class="row"

    div class="large-6 small-2 columns"

      h2 class="ciudad" Queretaro
      dl class="sub-nav top-filtre"
        dt Filtro:
        dd class="active"
          =link_to('Todos','#')
        dd
          =link_to('Perdidos','#')
        dd
          =link_to('Localizados','#')
        dd
          =link_to('Perros','#')
        dd
          =link_to('Gatos','#')
        dd
          =link_to('Otros','#')

    div class="large-5 columns"
      br
      ul class="button-group"
        li
          = link_to "多Buscas a tu mascota?", new_report_path , { :class => "button alert small radius" }
        li
          = link_to "多Encontraste alguna mascota?", new_report_path , { :class => "button alert small radius" }
      div align='right'

        hr
        label
          |{{pets.length}} perros cerca de ti


  /Map
  div class="row"

    div class="large-12 large-centered columns"
      google-map zoom='map.zoom' center='map.center' draggable="true"
        marker ng-repeat="pet in pets|orderBy: sortBy|| pet.name" coords="pet.place"
         /#Aqui se puede meter el window
         marker-label content="pet.name"
      br

  div class="row"
    div

      div class="large-2 columns pull"
        |Resultados: {{pets.length}}
        label for='sortby' Ordenar por:
        select class="radius" name='sortby' ng-model="sortby"
          option value='name' selected='' Nombre
          option value='animal_category.category' Raza
          option value='owner.name' Due単o

  /Results
  div class="row"
    ul class="small-block-grid-3"

      li class="small-view" ng-repeat="pet in pets| filter:filter | orderBy:sortby" ng-click="show($index)"
        br
        img class="pet-small panel " src="{{pet.image_url}}" align="left"
        h2
          |{{pet.name}}

        div
          ul class="button-group radius"
            li
              a class='button tiny alert'
                =fa_icon "facebook"
              a class='button tiny'
                =fa_icon "envelope-o"
              a class='button tiny'
                =fa_icon "comment"
              a class='button tiny'
                =fa_icon "google-plus-square"

              p
                |{{pet.comments}}
              p
                |<strong>Lugar donde se perdio:</strong> {{pet.place.name}}
              p
                |<strong>Due単o:</strong>{{pet.owner.name}}
              p
                |<strong>Categoria:</strong>{{pet.animal_category.category}}

        /-if user_signed_in?
        /  button class="tiny alert" ng-click="delete($index)" Borrar
